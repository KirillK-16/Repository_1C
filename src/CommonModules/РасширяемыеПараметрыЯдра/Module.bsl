Функция НазванияВнешнихФормНаФормеКонтрольнойПроцедуры(ВидКонтрольнойПроцедуры) Экспорт
	Формы = ВсеНазванияВнешнихФормНаФормеКонтрольнойПроцедуры();
	Если Формы.Свойство(ВидКонтрольнойПроцедуры.ИмяБизнесПроцесса) Тогда
		Возврат Формы[ВидКонтрольнойПроцедуры.ИмяБизнесПроцесса];
	Иначе
		Возврат Новый Массив;
	КонецЕсли;
КонецФункции

// Определяет список внешних форм, которые требуется открывать из формы задачи
// для каждой контрольной процедуры
//
// Возвращаемое значение:
// Структура
//
Функция НазванияВнешнихФормДляВсехВидовПроцедур() Экспорт
	Результат = Новый Структура;
	
	//////////////////////
	// КонтрольПодключений
	
	Результат.Вставить("КонтрольПодключений", Новый Соответствие);
	
	//////////////////////
	// Сбор дампов
	
	Результат.Вставить("СборДампов", Новый Соответствие);
	
	//////////////////////
	// Контроль памяти
	Результат.Вставить("КонтрольПамяти", Новый Соответствие);
	
	//////////////////////
	// ВнешнийКонтрольЦКК
	
	Формы = Новый Соответствие;
	НеНайденыОтчеты = Новый Соответствие; 
    
    Формы.Вставить(
		Справочники.ТипыЗадачВнешнийКонтрольЦКК.ВнешнийКонтрольЦККНеНайденыОтчеты,
		НеНайденыОтчеты
	);
	
	Формы.Вставить(
		Справочники.ТипыЗадач.СозданиеИНастройкаКонтрольнойПроцедуры,
		НеНайденыОтчеты
	);
	
	Результат.Вставить("ВнешнийКонтрольЦКК", Формы);
	
	/////////////////////////////
	// КонтрольРегламентныхЗаданий
	
	Результат.Вставить("КонтрольРегламентныхЗаданий", Новый Соответствие);
	
	Возврат Результат;
КонецФункции

// Определяет список названий макетов для объектов контроля и видов
// объектов контроля
//
// Возвращаемое значение:
// Структура
//
Функция СписокМакетовРекомендацийВидыОбъектов(ЭтоВид = Истина) Экспорт
	Результат = Новый Соответствие;
	
	Результат.Вставить(
		Справочники.ВидыОбъектовКонтроля.РабочийСервер, 
		?(ЭтоВид, "РабочиеСерверы", "РабочийСервер") 
	);
	
	Результат.Вставить(
		Справочники.ВидыОбъектовКонтроля.ЦентрКонтроляКачества, 
		?(ЭтоВид, "ЦентрыКонтроляКачества", "ЦентрКонтроляКачества")
	);
	
	Результат.Вставить(
		Справочники.ВидыОбъектовКонтроля.ИнформационнаяБаза, 
		?(ЭтоВид, "ИнформационныеБазы", "ИнформационнаяБаза")
	);
	
	Результат.Вставить(
		Справочники.ВидыОбъектовКонтроля.КластерСерверов1С, 
		?(ЭтоВид, "КластерыСерверов1С", "КластерСерверов1С")
	);
	
	Возврат Результат;
КонецФункции

