Функция УдалитьУстаревшиеДанные() Экспорт
	
	ЕстьУдаление = Ложь;
	
	ТекДата = ТекущаяДата();
	
	Запрос = Новый Запрос;
	Запрос.Текст = "
	|ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	УникальныйИдентификаторФормы
	|ИЗ
	|	(ВЫБРАТЬ ПЕРВЫЕ 10000
	|		УникальныйИдентификаторФормы
	|	ИЗ
	|		РегистрСведений.ГруппыСчетчиковФормаСписка
	|	ГДЕ
	|		Период < &ГраницаУдаления
	|	) КАК Выборка
	|";
	
	Запрос.УстановитьПараметр("ГраницаУдаления", НачалоДня(ТекДата) - 86400);
		
	Результат = Запрос.Выполнить();
	Выборка = Результат.Выбрать();
	
	НаборЗаписей = РегистрыСведений.ГруппыСчетчиковФормаСписка.СоздатьНаборЗаписей();
	Пока Выборка.Следующий() Цикл
		ЕстьУдаление = Истина;
		НаборЗаписей.Отбор.УникальныйИдентификаторФормы.Установить(Выборка.УникальныйИдентификаторФормы);
		НаборЗаписей.Записать(Истина);
	КонецЦикла;
		
	Возврат ЕстьУдаление;
	
КонецФункции

Функция УдалитьСчетчик(Счетчик) Экспорт
    
    НаборЗаписей = РегистрыСведений.ГруппыСчетчиковФормаСписка.СоздатьНаборЗаписей();
    НаборЗаписей.Отбор.Счетчик.Установить(Счетчик);
    НаборЗаписей.Записать(Истина);
    
КонецФункции

