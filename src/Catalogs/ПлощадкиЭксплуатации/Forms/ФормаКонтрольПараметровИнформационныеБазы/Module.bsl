&НаСервере
Процедура ЗаписатьИзмененияПереопределяемая()
    
    МассивСтрок = Новый Массив;
    МассивСтрок.Добавить(ЭтотОбъект.Список[0]);
    ТЗнБуфер = ЭтотОбъект.Список.Выгрузить(МассивСтрок);
        
    Для Каждого ТекКолонка Из ТЗнБуфер.Колонки Цикл
        
        Если СтрНачинаетсяС(ТекКолонка.Имя, "_") Тогда
            
            ИндексСсылки = Число(СтрЗаменить(ТекКолонка.Имя, "_", ""));
            
            ТекИнформационнаяБаза = ЭтотОбъект.Ссылки[ИндексСсылки];
            
            ПараметрыКонтроляИнформационнойБазы = РегистрыСведений.ПараметрыИнформационныхБаз.ПрочитатьНастройки(ТекИнформационнаяБаза.Значение);
            НастройкиКонтроляИнформационнойБазы = РегистрыСведений.КонтрольПараметровОбъектов.ПрочитатьНастройки(ТекИнформационнаяБаза.Значение);
            
            Для Каждого ТекСтрока Из ЭтотОбъект.Список Цикл
                
                Если ТекСтрока.Редактировать Тогда
                    
                    Параметр = ТекСтрока.Параметр;
                    ЭтоКонтроль = СтрНачинаетсяС(Параметр, "Контроль");
                    
                    Если ЭтоКонтроль Тогда
                        
                        НастройкиКонтроляИнформационнойБазы[СтрЗаменить(Параметр, "Контроль", "")] = ТекСтрока[ТекКолонка.Имя]; 
                        
                    Иначе
                        
                        ПараметрыКонтроляИнформационнойБазы[ТекСтрока.Параметр] = ТекСтрока[ТекКолонка.Имя];
                        
                    КонецЕсли;
                    
                КонецЕсли;
                
            КонецЦикла;
            
            РегистрыСведений.ПараметрыИнформационныхБаз.ЗаписатьНастройки(ТекИнформационнаяБаза.Значение, ПараметрыКонтроляИнформационнойБазы);
            РегистрыСведений.КонтрольПараметровОбъектов.ЗаписатьНастройки(ТекИнформационнаяБаза.Значение, НастройкиКонтроляИнформационнойБазы);
            
        КонецЕсли;
        
    КонецЦикла;
        
КонецПроцедуры

