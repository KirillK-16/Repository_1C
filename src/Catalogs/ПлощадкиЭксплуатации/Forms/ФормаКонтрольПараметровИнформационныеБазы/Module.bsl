        Ссылки.ЗагрузитьЗначения(СсылкиМассив);
        УстановитьОтборСсылки(Ссылки);
       
    КонецЕсли;
    
    ЗаполнитьПараметрыКонтроля();
    
    ЗаполнитьСписок();
    
    НаборДанных = ИнициализироватьКомпоновщик();
    УстановитьОграниченияПолейОтбора(НаборДанных);
    
    УстановитьОтбор();
    
КонецПроцедуры

